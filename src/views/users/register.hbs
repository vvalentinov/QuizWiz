<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <h2 class="text-center">Register</h2>
        <form class="mt-5 col-6 text-center" method="POST">
            <div class="form-floating mb-3">
                <input type="text" class="form-control border border-2" id="floatingInput" name="username"
                    placeholder="username" value="{{username}}">
                <label for="floatingInput">Username</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control border border-2" id="floatingPassword" name="password"
                    placeholder="password" value="{{password}}">
                <label for="floatingPassword">Password</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control border border-2" id="floatingRepeatPassword"
                    name="repeatPassword" placeholder="repeatPassword" value="{{repeatPassword}}">
                <label for="floatingRepeatPassword">Repeat Password</label>
            </div>
            <button class="btn btn-primary btn-lg mt-5 px-5" type="submit">Register</button>
        </form>
    </div>
</div>