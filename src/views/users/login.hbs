<main>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h2 class="text-center">Login to your account</h2>
            <form class="col-6 mt-2" method="POST">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control border border-2" id="floatingInput" name="username"
                        placeholder="username" value="{{username}}">
                    <label for="floatingInput">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control border border-2" id="floatingPassword" name="password"
                        placeholder="password" value="{{password}}">
                    <label for="floatingPassword">Password</label>
                </div>
                <div>
                    <a href="/users/register">Don't have an account? Register here!</a>
                </div>
                <div class="text-center mt-2">
                    <button class="btn btn-primary btn-lg px-5 " type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
</main>